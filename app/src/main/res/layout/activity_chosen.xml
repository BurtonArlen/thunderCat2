<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inboundrx.thundercat2.ChosenActivity">

    <TextView
        android:id="@+id/textField1"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Text field 1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="190dp"
        android:textSize="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <TextView
        android:id="@+id/textField2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Text field 2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textField1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <ImageView
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/portland_map"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <ImageView
        android:id="@+id/location1"
        android:background="@color/colorAccent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="70dp"
        app:layout_constraintRight_toRightOf="@+id/map"
        app:layout_constraintBottom_toBottomOf="@+id/map"
        android:layout_marginBottom="70dp" />
    <ImageView
        android:id="@+id/location2"
        android:background="@color/colorAccent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/map"
        app:layout_constraintTop_toTopOf="@+id/map"
        android:layout_marginTop="100dp" />
    <ImageView
        android:id="@+id/location3"
        android:background="@color/colorAccent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@+id/map"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="parent" />
    <ImageView
        android:id="@+id/location4"
        android:background="@color/colorAccent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@+id/map"
        android:layout_marginTop="8dp"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/map"
        app:layout_constraintBottom_toBottomOf="@+id/map"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
