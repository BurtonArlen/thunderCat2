<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inboundrx.thundercat2.MainActivity"
    android:background="@drawable/landing">

    <ImageView
        android:scaleType="centerCrop"
        android:alpha="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/byte_shift_black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/landingLogo"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/learnMoreButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:alpha="0"
        android:layout_width="wrap_content"
        android:text="Learn More"
        android:textAlignment="center"
        android:textSize="20dp"
        android:background="@drawable/ic_lightbulb_outline_white_48dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:id="@+id/learnMoreButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        android:layout_marginBottom="45dp" />

</android.support.constraint.ConstraintLayout>
