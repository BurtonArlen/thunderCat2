<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inboundrx.thundercat2.SelectionActivity"
    android:background="@color/colorAccent">

    <Button
        android:id="@+id/mapDemoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map Demo"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="@drawable/ic_map_white_48dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.501" />

    <Button
        android:id="@+id/rewardDemoButton"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:text="Incentive Demo"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="@drawable/ic_stars_white_48dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/mapDemoButton"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/userDemoButton" />

    <Button
        android:id="@+id/userDemoButton"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="User Demo"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="@drawable/ic_account_box_white_48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
